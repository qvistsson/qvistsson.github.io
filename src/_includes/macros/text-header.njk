{% macro textHeader(level, sub, main, light) %}
  <h{{level}} class="fs6 mb5 flex-row align-stretch{% if (light) %} decorated-header-light{% endif %}">
    <span class="flex-column">
      {% if (sub) %}
        <span class="fs3 decorated-header-subtext">{{sub}}</span>
      {% endif %}
      <span class="fs5 decorated-header-maintext">{{main}}</span>
    </span>
  </h{{level}}>
{% endmacro %}